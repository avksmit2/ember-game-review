{{#each game as |game|}}
  {{#link-to 'game' game.id}}
    <div class="row summary">
      <div class="col-sm-6">
        <img src='{{game.image}}' alt="image of game">
      </div>
      <div class="col-sm-6">
        <h2>{{game.gameName}} <span class="small">({{number-reviews game}} reviews)</span></h2>
        <p>Entered by {{game.user}} {{moment-from-now game.timestamp}}</p>
        <h4>{{game.summary}}</h4>
      </div>
    </div>
  {{/link-to}}
{{/each}}
