<button class="btn btn-success"{{action "toggleModal"}}>Add a Game</button>

{{#if isShowingModal}}
  {{#modal-dialog close="toggleModal"
                  targetAttachment="center"
                  translucentOverlay=true}}
    <h1>New Game</h1>
    <form {{action 'addGame' on="submit"}}>
      <div class="form-group">
        <label for="user">Username: </label>
        {{input value=user id="user" class="form-control" required="required"}}
      </div>
      <div class="form-group">
        <label for="gameName">Game Name: </label>
        {{input value=gameName id="gameName" class="form-control" required="required"}}
      </div>
      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="releaseDate">Release Date: </label>
        {{input value=releaseDate id="releaseDate" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="summary">Summary: </label>
        {{input value=summary id="summary" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="details">Game Details: </label>
        {{input value=details id="details" class="form-control" required="required"}}
      </div>
      <button class="btn btn-success">Add</button>
    </form>
  {{/modal-dialog}}
{{/if}}
